	<h1 class="text-center">My orders</h1>
	<% count=0 %>
<% @orders.each do |ord|  %>
	<a href="/showorder/<%= ord.id %>"><div class="row myrow hvr-grow-rotate1">
	<div class="large-1 columns">
				  <img src="/img/<%= Product.find(ord.product_id).id %>.jpg">
		</div>
		<div class="large-9 columns text-left">
			<h3><%= Product.find(ord.product_id).name %></h3>
		</div>
		<div class="large-2 columns">
		<% count+=ord.price %>
			<h3><%= ord.price %> RUB</h3>
		</div>

	</div></a>	
	
	<% end %>
