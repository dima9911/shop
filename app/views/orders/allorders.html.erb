	
<% if current_user.admin %>
<h1 class="text-center">ALL orders</h1>
<% @orders.each do |ord|  %>
	<a href="/showorder/<%= ord.id %>"><div class="row myrow hvr-grow-rotate1">
	<div class="large-1 columns">
				  <img src="/img/<%= Product.find(ord.product_id).id %>.jpg">
		</div>
		<div class="large-2 columns text-left">
		 	<h4 class="final1"> Order by</h4> <h3 class="final"><%= User.find(ord.user_id).first_name %></h3>
		</div>
		<div class="large-7 columns text-left">
			<h3><%= Product.find(ord.product_id).name %></h3>
		</div>

	</div></a>	
	
	<% end %>
<% else %>
	<h1 class="text-center">My orders</h1>
	<% count=0 %>
<% @orders.each do |ord|  %>
	<a href="/showorder/<%= ord.id %>"><div class="row myrow hvr-grow-rotate1">
	<div class="large-1 columns">
				  <img src="/img/<%= Product.find(ord.product_id).id %>.jpg">
		</div>
		<div class="large-9 columns text-left">
			<h3><%= Product.find(ord.product_id).name %></h3>
		</div>
		<div class="large-2 columns">
		<% count+=ord.price %>
			<h3><%= ord.price %> RUB</h3>
		</div>

	</div></a>	
	
	<% end %>
		<hr>
		<div class="row">
		<div class="large-3 columns">
		<a href="/products" class="alert button"><== Back</a>
		</div>
			<div class="large-3 columns">
			<h3 class="final">FINAL PRICE <h2><%= count %> RUB</h2>  </h3>
		</div>
		</div>

		<% end %>

		<div class="row">
			<div class="large-12 columns text-center">
				<a href="/products" class="alert button"><== BACK </a>
			</div>
		</div>