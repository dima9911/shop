<div class="row">
	<div class="large-12 columns text-center">
		<h1>You look the order of ticket number - <%= @order.id %></h1>
	</div>
</div>

<div class="row myrow hvr-grow-rotate1">
	<div class="large-3 columns">
		<img src="/img/<%= @order.product_id %>.jpg">
	</div>
	<div class="large-3 columns">
		<h3><%= Product.find(@order.product_id).name %></h3>
	</div>
	<div class="large-3 columns">
		<h3>State of order: 
		
		<% if @order.state %>
			<strong class="mystrong1">READY</strong> 
				<% if current_user.admin %>
	   <%= form_for(@order) do |f| %>

      <%= f.submit "Enable NOT READY", class: "alert button but2" %>
    		<% end %>
		<% end %>
		<% else %>

			<strong class="mystrong" >NOT READY</strong>

				<% if current_user.admin %>
	   <%= form_for(@order) do |f| %>

      <%= f.submit "Enable READY", class: "alert button but2" %>
    		<% end %>
		<% end %>

		<% end %>

	

		</h3>
	</div>
</div>
<br>
<div class="row">
	<div class="large-12 columns text-center">
		<a class="alert button" href="/allorders"><== Back </a>	
	</div>
</div>
