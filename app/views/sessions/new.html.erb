

<div class="row text-center">
<h1>Sign in</h1>
  <div class="large-12 columns">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Sign in", class: "alert button" %>
    <% end %>

    <h3>New user? <%= link_to "Sign up now!", signup_path %></h3>
  </div>
</div>