<div class="row">
	<div class="large-12 columns">
		<h1>You can see all users here</h1>
		<a href="/products" class="alert button" ><== BACK</a>
	</div>
</div>
<% @users.each do |user| %>
<% if user != current_user %>
<div class="row myrow hvr-grow-rotate1">
	<div class="large-3 columns">
		<h3><%= user.first_name %></h3>
	</div>
	<div class="large-3 columns">
		<h3><%= user.last_name %></h3>
	</div>
	<div class="large-3 columns">
		<h3><%= user.email %></h3>
	</div>

<% if user.admin %>
	<div class="large-3 columns">
		<h3 class="final1"><%= user.admin %></h3>
		   <%= form_for(user) do |f| %>

      <%= f.submit "Disable ADMIN mode", class: "alert button but2" %>
    <% end %>
	</div>
	<% else %>
	<div class="large-3 columns">
		<h3 class="final"> FALSE </h3> 




   <%= form_for(user) do |f| %>

      <%= f.submit "Enable ADMIN mode", class: "alert button but2" %>
    <% end %>







	</div>
	<% end %>

</div>
<% end %>
<% end %>